// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  name       String
  email      String    @unique
  password   String
  role       Role
  contactNo  String
  address    String
  profileImg String
  bookings   Booking[]
  reviews    Review[]
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")
}

enum Role {
  super_admin
  admin
  user
}

model Service {
  id          String   @id @default(uuid())
  name        String
  location    String
  category    String
  price       Int
  description String
  reviews     Review[]
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
}

// Booking model for booking and tracking
model Booking {
  id        String   @id @default(uuid())
  userId    String
  serviceId String
  date      DateTime
  status    String
  User      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

// Review model for leaving reviews and ratings
model Review {
  id        String   @id @default(uuid())
  userId    String
  serviceId String
  rating    Int
  comment   String
  User      User     @relation(fields: [userId], references: [id])
  Service   Service  @relation(fields: [serviceId], references: [id])
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model Content {
  id          String   @id @default(uuid())
  contentType String
  title       String
  content     String
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
}
