// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String     @id @default(uuid())
  name       String
  email      String     @unique
  password   String
  role       Role
  contactNo  String     @unique
  address    String?
  profileImg String?
  bookings   Booking[]
  reviews    Review[]
  news       News[]
  createdAt  DateTime   @default(now()) @map("created_at")
  updatedAt  DateTime   @updatedAt @map("updated_at")
  Feedback   Feedback[]

  @@map("user")
}

enum Role {
  super_admin
  admin
  user
}

model Category {
  id        String    @id @default(uuid())
  name      String
  packages  Package[]
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  @@map("category")
}

model Package {
  id                String    @id @default(uuid())
  categoryId        String
  name              String
  validFrom         DateTime  @map("valid_from")
  validTill         DateTime  @map("valid_till")
  country           String
  location          String
  price             Int
  people            Int
  isBooked          Boolean   @default(false)
  duration          String
  description       String
  facilities        String?
  whyChooseUs       String?   @map("why_choose_us")
  image             String
  availableQunatity Int       @map("available_quantity")
  reviews           Review[]
  categorires       Category  @relation(fields: [categoryId], references: [id])
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")
  Booking           Booking[]

  @@map("package")
}

model TeamMember {
  id          String   @id @default(uuid())
  name        String
  designation String
  email       String   @unique
  linkedinUrl String
  contactNo   String   @unique
  profileImg  String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("teamMember")
}

model PaymentInfo {
  id                  String    @id @default(uuid())
  paymentMethod       String
  paypalEmail         String
  paymentStatus       String
  paypalTransactionId String?
  paypalPayerId       String?
  Booking             Booking[]
  createdAt           DateTime  @default(now()) @map("created_at")
  updatedAt           DateTime  @updatedAt @map("updated_at")
}

model Booking {
  id            String      @id @default(uuid())
  userId        String
  paymentInfoId String
  packageId     String
  date          DateTime
  adult         Int
  childern      Int?
  status        String
  package       Package     @relation(fields: [packageId], references: [id])
  user          User        @relation(fields: [userId], references: [id])
  paymentInfo   PaymentInfo @relation(fields: [paymentInfoId], references: [id])
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")

  @@map("booking")
}

model Contact {
  id        String   @id @default(uuid())
  name      String
  email     String
  contactNo String
  message   String
  status    String   @default("pending")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("contact")
}

model News {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  contentType String   @map("content_type")
  title       String
  content     String
  date        DateTime
  image       String
  reviews     Review[]
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("news")
}

model FAQ {
  id        String   @id @default(uuid())
  question  String
  answer    String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("faq")
}

model Feedback {
  id          String   @id @default(uuid())
  userId      String
  comment     String
  suggestions String
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("feedback")
}

model Review {
  id        String   @id @default(uuid())
  userId    String
  packageId String?
  newsId    String?
  rating    Int
  comment   String
  user      User     @relation(fields: [userId], references: [id])
  package   Package? @relation(fields: [packageId], references: [id])
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  News      News?    @relation(fields: [newsId], references: [id])

  @@map("review")
}
